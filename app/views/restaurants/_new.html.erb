<div class="container mt-5">
  <h3>Enter a new restaurant</h3>
    <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, :collection => %w[chinese italian japanese french belgian]%>
      <%= f.button :submit, class:"btn btn-primary mb-3" %>
    <% end %>
    <%= link_to "back", restaurants_path, class:"btn btn-danger" %>
</div>
