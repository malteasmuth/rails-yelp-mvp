<div class="navbar navbar-dark bg-light d-flex">
  <h1>All our restaurants</h1>
  <%= link_to "Add a restaurant!", new_restaurant_path, class: "btn btn-secondary"%>
</div>
<div class="container mt-5 cards-container">
  <% @restaurants.each do | restaurant |%>
  <div class="card mt-5 pd-5 m-5 restaurant-card">
    <h3><%= restaurant.name%></h3>
    <p><%= link_to "Find out more", restaurant_path(restaurant), class: "btn btn-primary"%></p>
  </div>
  <%end%>
</div>
